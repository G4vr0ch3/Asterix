ATTRS{devpath}=="1.3", ACTION=="ADD", ENV{DEVTYPE}=="disk", ATTR{authorized}="1", RUN+="/bin/systemctl start inputdiskmnt@%k.service"
ATTRS{devpath}=="1.3", ACTION=="ADD", ENV{DEVTYPE}=="partition", ATTR{authorized}="1", RUN+="/bin/systemctl start inputpartmnt@%k.service"
ATTRS{devpath}=="1.3", KERNEL=="hid*", RUN+="/bin/bash -c '/usr/bin/echo 0 > /var/lib/docker/volumes/DataShare/_data/BadUSBInput'", RUN+="/bin/bash -c '/usr/bin/echo 0 > /sys/bus/usb/devices/1-1.3/authorized'"

ATTRS{devpath}=="1.3", ACTION=="ADD", ENV{DEVTYPE}=="disk", ATTR{authorized}="1", RUN+="/bin/systemctl stop inputdiskmnt@%k.service"
ATTRS{devpath}=="1.3", ACTION=="ADD", ENV{DEVTYPE}=="partition", ATTR{authorized}="1", RUN+="/bin/systemctl stop inputpartmnt@%k.service"
