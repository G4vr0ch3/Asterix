KERNEL=="sd[a-z][0-9]", ATTRS{devpath}=="1.3", ENV{DEVTYPE}=="partition", ACTION=="add", SYMLINK+="USBInputPart%k", RUN+="/usr/bin/systemctl restart inputpartmnt@%k.service"
ATTRS{devpath}=="1.3", KERNEL=="hid*", RUN+="/bin/bash -c '/usr/bin/echo 0 > /var/lib/docker/volumes/DataShare/_data/BadUSBInput'", RUN+="/bin/bash -c '/usr/bin/echo 0 > /sys/bus/usb/devices/1-1.3/authorized'"
ATTRS{devpath}=="1.3", KERNEL=="net*", RUN+="/bin/bash -c '/usr/bin/echo 0 > /var/lib/docker/volumes/DataShare/_data/BadUSBInput'", RUN+="/bin/bash -c '/usr/bin/echo 0 > /sys/bus/usb/devices/1-1.3/authorized'"

ACTION=="remove", ATTRS{devpath}=="1.3", RUN+="/usr/bin/systemctl restart inputpartumnt.service"