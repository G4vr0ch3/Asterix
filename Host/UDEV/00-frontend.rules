KERNEL=="sd[a-z]", ATTRS{devpath}=="1.3", ENV{DEVTYPE}=="disk", ACTION=="add", SYMLINK+="USBInputDisk", RUN+="/usr/bin/systemctl start inputdiskmnt@%k.service"
KERNEL=="sd[a-z][0-9]", ATTRS{devpath}=="1.3", ENV{DEVTYPE}=="partition", ACTION=="add", SYMLINK+="USBInputPart", RUN+="/usr/bin/systemctl start inputpartmnt@%k.service"
ATTRS{devpath}=="1.3", KERNEL=="hid*", RUN+="/bin/bash -c '/usr/bin/echo 0 > /var/lib/docker/volumes/DataShare/_data/BadUSBInput'", RUN+="/bin/bash -c '/usr/bin/echo 0 > /sys/bus/usb/devices/1-1.3/authorized'"
ATTRS{devpath}=="1.3", KERNEL=="net*", RUN+="/bin/bash -c '/usr/bin/echo 0 > /var/lib/docker/volumes/DataShare/_data/BadUSBInput'", RUN+="/bin/bash -c '/usr/bin/echo 0 > /sys/bus/usb/devices/1-1.3/authorized'"

KERNEL=="sd[a-z]", ATTRS{devpath}=="1.3", ENV{DEVTYPE}=="disk", ACTION=="remove", RUN+="/usr/bin/systemctl stop inputdiskmnt@%k.service"
KERNEL=="sd[a-z][0-9]", ATTRS{devpath}=="1.3", ENV{DEVTYPE}=="partition", ACTION=="remove", RUN+="/usr/bin/systemctl stop inputpartmnt@%k.service"
